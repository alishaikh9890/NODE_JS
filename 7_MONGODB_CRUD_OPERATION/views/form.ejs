
<form method="post" action="/insertData" enctype="multipart/form-data">
    <h2>Registration</h2>
    <table border="1">
        <tr>
            <td>Name</td>
            <td><input type="text" name="name"></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type="email" name="email"></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password"></td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <input type="radio" value="Male" name="gender">Male 
                <input type="radio" value="Female" name="gender">Female 
                <input type="radio" value="other" name="gender">Others 
            </td>
        </tr>
        <tr>
            <td>Hobby</td>
            <td>
                <input type="checkbox" value="Cricket" name="hobby">Cricket 
                <input type="checkbox" value="Music" name="hobby">Music 
                <input type="checkbox" value="Reading" name="hobby">Reading 
            </td>
        </tr>
        <tr>
            <td>Phone</td>
            <td><input type="number" name="phone"></td>
        </tr>
        <tr>
            <td>city</td>
            <td>
                <select name="city" >
                    <option>--Select City--</option>
                    <% let city = ["latur", "pune", "bhavnagar", "surat", "Mumbai", "Delhi"]
                        city.map((item) => {
                    %>
                            <option><%= item %></option>
                    <%   }) %>
                </select>
            </td>
        </tr>
        <tr> 
            <td>Image</td>
            <td>
                <input type="file" name="image" />
            </td>
        </tr>
        <tr>
            <th colspan="2"><input type="submit"></th>
        </tr>
    </table>
    <br/>
    <br/>
    <h2>user Data</h2>
    <table border="">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Gender</th>
            <th>Hobby</th>
            <th>Phone</th>
            <th>City</th>
            <th>Image</th>
            <th>Action</th>
        </tr>

        <% record.map((item)=>{ %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.password %></td>
                <td><%= item.gender %></td>
                <td><%= item.hobby %></td>
                <td><%= item.phone %></td>
                <td><%= item.city %></td>
                <td>
                    <img src="<%= item.image %>" width="100" alt=""/>
                </td>
                <td>
                    <button><a href="/deleteData/<%= item.id %>">Delete</a></button> ||
                    <button><a href="/editData?id=<%= item.id %>">Edit</a></button>
                </td>
            </tr>
         <% }) %>

  


    </table>

</form>